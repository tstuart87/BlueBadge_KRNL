@model KRNL.Models.CooperatorDetail

@{
    ViewBag.Title = "Delete";
}

<div>
    <img class="titlePic" src="/Content/krnlpics/tDeleteY.png" alt="KRNL">
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color deleteButtons">
        <input type="submit" value="Delete" class="btn btn-default deleteButton" />
    </div>
}


<table class="table message">
    <tr class="messageHeader">
        <th width=42% class="messageHeaderTopLeft">
            @*@Html.DisplayNameFor(model => model.LocationCode)*@
        </th>
        <th width=42%>
            @*@Html.DisplayNameFor(model => model.DateCreated)*@
        </th>
        <th width=16% class="messageHeaderTopRight">Contact
            @*@Html.DisplayNameFor(model => model.HumanGrowthStage)*@
        </th>
    </tr>
    <tr class="spacer">
        <td class="spacer" colspan="3"></td>
    </tr>
    <tbody class="comment">
        <tr class="comment">
            <td class="messageLeftLocationCoop">
                <div class="messageLabel">Name:</div>
                @Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model => model.FirstName)
            </td>
            <td class="phoneDirectory">
                @Html.DisplayFor(model => model.Phone)<br />
                @Html.DisplayFor(model => model.Email)<br />
                @Html.DisplayFor(model => model.ContactType)
            </td>
            <td class="messageRightLocationCoop alignRight">
            </td>
        </tr>
    </tbody>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Html.ActionLink("Back to DIRECTORY", "Index")
    </div>
}
