@model KRNL.Models.DocumentDetail

@{
    ViewBag.Title = "Delete";
}

<div>
    <img class="titlePic" src="/Content/krnlpics/tDeleteY.png" alt="KRNL">
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color deleteButtons">
        <input type="submit" value="Delete" class="btn btn-default deleteButton" />
    </div>
}

<div>
    <table class="table message">
        <tr class="messageHeader">
            <th width="10%" class="messageHeader messageHeaderTopLeft">

            </th>
            <th width="20%">

            </th>
            <th width="20%">

            </th>
            <th width="42%">

            </th>
            <th width="8%" class="messageHeaderTopRight">Doc</th>
        </tr>

        <tr class="spacer">
            <td class="spacer" colspan="4"></td>
        </tr>
        <tbody class="comment">
            <tr tr class="comment">
                <td class="messageLeftLocationCoop tdVertCenter">
                    <a target="blank" href=@Url.Content(Model.DocString)><input type="button" value=" Open " class="basicButton" /></a>
                </td>
                <td>
                    @Html.HiddenFor(model => model.DocumentId)
                    <div class="messageLabel">LocID:</div>
                    @Html.ActionLink(Model.LocationCode.ToUpper(), "Edit", "Location", new { id = Model.LocationId }, null)
                </td>
                <td class="tdVertCenter alignRight">
                    @if (Model.DocType == KRNL.Data.docType.Map)
                    {
                        <img class="contactIcon" src="/Content/krnlpics/imap.png" alt="KRNL">
                    }
                    @if (Model.DocType == KRNL.Data.docType.FieldBook)
                    {
                        <img class="contactIcon" src="/Content/krnlpics/ifieldbook.png" alt="KRNL">
                    }
                    @if (Model.DocType == KRNL.Data.docType.Image)
                    {
                        <img class="contactIcon" src="/Content/krnlpics/ipicture.png" alt="KRNL">
                    }
                </td>
                <td>
                    <div class="messageLabel">Document:</div>
                    <div class="smallerFont">
                        @Html.DisplayFor(model => model.DocName)
                    </div>
                </td>
                <td class="messageRightLocationCoop locStatusDots openDocButton">

                </td>
            </tr>
        </tbody>

    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to DOCS", "Index")
        </div>
    }
</div>
