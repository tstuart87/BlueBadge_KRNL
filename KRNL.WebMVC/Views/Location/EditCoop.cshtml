@model KRNL.Models.LocationEdit

@{
    ViewBag.Title = "EditCoop";
}

<h2>Change Cooperator</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@Html.DisplayFor(model => model.LocationName)</h4>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.LocationId)
    @Html.HiddenFor(model => model.LocationName)
    @Html.HiddenFor(model => model.LocationCode)
    @Html.HiddenFor(model => model.DayOfPlanting)
    @Html.HiddenFor(model => model.MonthOfPlanting)
    @Html.HiddenFor(model => model.YearOfPlanting)
    @Html.HiddenFor(model => model.GDUs)
    @Html.HiddenFor(model => model.GrowthStage)
    @Html.HiddenFor(model => model.Longitude)
    @Html.HiddenFor(model => model.Latitude)
    @Html.HiddenFor(model => model.IsStaked)
    @Html.HiddenFor(model => model.LocationId)
    @Html.HiddenFor(model => model.FullName)
    @Html.HiddenFor(model => model.State)

    <div class="form-group">
        @Html.LabelFor(model => model.CooperatorId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CooperatorId", new SelectList(ViewBag.cooperators, "CooperatorId", "FullName"), null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CooperatorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Locations", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
