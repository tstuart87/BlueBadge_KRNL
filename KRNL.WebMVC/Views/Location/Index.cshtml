@model IEnumerable<KRNL.Models.LocationListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Locations</h2>

<h4>
    @Html.ActionLink("Add Location", "Create")
</h4>



@using (Html.BeginForm())
{
    <p>
        <div class="searchBar">
            @Html.TextBox("searchString")
            <input type="submit" value=" Search " class="searchButton" />
        </div>
    </p>
}

<table class="table message">

    <tr class="messageHeader">
        <th width=20% class="messageHeader messageHeaderTopLeft">
            @*@Html.DisplayNameFor(model => model.LocationCode)*@
            @Html.ActionLink("LocID", "Index", new { sortOrder = ViewBag.LocIDSortParm })

        </th>

        @*<th class="header">*@
        @*@Html.DisplayNameFor(model => model.LocationName)*@
        @*@Html.ActionLink("Location", "Index", new { sortOrder = ViewBag.LocationSortParm })*@
        @*</th>*@

        <th width=20%>

            @*@Html.DisplayNameFor(model => model.GDUs)*@
            @Html.ActionLink("GDUs", "Index", new { sortOrder = ViewBag.GDUSortParm })

        </th>

        <th width=30%>
            @Html.DisplayNameFor(model => model.GrowthStage)
        </th>

        <th width=30% class="messageHeaderTopRight"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="spacer">
            <td class="spacer" colspan="4"></td>
        </tr>
        <tbody class="comment">
            <tr class="comment">

                <td colspan="1" class="messageLeftLocationCoop">
                    <div class="messageLabel">LocID:</div>
                    @Html.ActionLink(item.LocationCode.ToUpper(), "Edit", new { id = item.LocationId })
                </td>
                @*<td>*@
                @*@Html.DisplayFor(modelItem => item.LocationName)*@
                @*@Html.ActionLink(item.LocationName, "Edit", new { id = item.LocationId })*@
                @*</td>*@
                @*<td>
                            @Html.DisplayFor(modelItem => item.State)
                    </td>*@

                <td colspan="1">
                    <div class="messageLabel">GDUs:</div>
                    @Html.DisplayFor(modelItem => item.GDUs)
                </td>
                <td colspan="1">
                    <div class="messageLabel">Growth Stage:</div>
                    @Html.DisplayFor(modelItem => item.GrowthStage)
                </td>
                <td colspan="1" class="messageRightLocationCoop locStatusDots">
                    @if (item.YearOfPlanting > 2000 && item.IsStaked == KRNL.Data.stake.No && item.IsHarvested == KRNL.Data.stake.No)
                    {
                        <img class="locStatusDots" src="/img/dotsPLANTED.png" alt="KRNL">
                    }
                    else if (item.YearOfPlanting > 2000 && item.IsStaked == KRNL.Data.stake.Yes && item.IsHarvested == KRNL.Data.stake.No)
                    {
                        <img class="locStatusDots" src="/img/dotsSTAKED.png" alt="KRNL">
                    }
                    else if (item.YearOfPlanting > 2000 && item.IsHarvested == KRNL.Data.stake.Yes)
                    {
                        <img class="locStatusDots" src="/img/dotsHARVESTED.png" alt="KRNL">
                    }
                    else
                    {
                        <img class="locStatusDots" src="/img/dotsNULL.png" alt="KRNL">
                    }
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.LocationId })*@
                </td>
            </tr>
        </tbody>
    }

</table>
<br />
@*<img class="locStatusDots" src="/img/dotsNULL.png" alt="KRNL">*@