                                        break;
                                    case "V10":
                                        <img class="barView" src="/img/barV10.png" alt="KRNL">
                                        break;
                                    case "V11":
                                        <img class="barView" src="/img/barV11.png" alt="KRNL">
                                        break;
                                    case "V12":
                                        <img class="barView" src="/img/barV12.png" alt="KRNL">
                                        break;
                                    case "V13":
                                        <img class="barView" src="/img/barV13.png" alt="KRNL">
                                        break;
                                    case "V14":
                                        <img class="barView" src="/img/barV14.png" alt="KRNL">
                                        break;
                                    case "V15":
                                        <img class="barView" src="/img/barV15.png" alt="KRNL">
                                        break;
                                    case "VT":
                                        <img class="barView" src="/img/barVT.png" alt="KRNL">
                                        break;
                                    case "R1":
                                        <img class="barView" src="/img/barR1.png" alt="KRNL">
                                        break;
                                    case "R2":
                                        <img class="barView" src="/img/barR2.png" alt="KRNL">
                                        break;
                                    case "R3":
                                        <img class="barView" src="/img/barR3.png" alt="KRNL">
                                        break;
                                    case "R4":
                                        <img class="barView" src="/img/barR4.png" alt="KRNL">
                                        break;
                                    case "R5":
                                        <img class="barView" src="/img/barR5.png" alt="KRNL">
                                        break;
                                    case "R6":
                                        <img class="barView" src="/img/barR6.png" alt="KRNL">
                                        break;
                                    default:
                                        break;
                                }
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

            break;
        }

    case "viewThree":
        {
            <table class="table message">

                <tr class="messageHeader">

                    <th width=18% class="messageHeader messageHeaderTopLeft">
                        @Html.ActionLink("LocID", "Index", new { sortOrder = "LocID", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>

                    <th width=41%>
                        @Html.ActionLink(" ", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>

                    <th width=41% class="messageHeaderTopRight">
                        @Html.ActionLink(" ", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="spacer">
                        <td class="spacer" colspan="3"></td>
                    </tr>
                    <tbody class="comment">
                        <tr class="comment">

                            <td width="10%" colspan="1" class="messageLeftLocationCoop">
                                <div class="messageLabel">LocID:</div>
                                @Html.ActionLink(item.LocationCode.ToUpper(), "Edit", new { id = item.LocationId })
                            </td>
                            <td colspan="1">
                                @if (item.CooperatorId != null)
                                {
                                    <div class="messageLabel">Cooperator:</div>
                                    @Html.ActionLink(item.FullName, "Edit", "Cooperator", new { id = item.CooperatorId }, null)
                                }
                                else
                                {
                                    <div class="messageLabel">Cooperator:</div>
                                    @Html.ActionLink("Assign Cooperator", "EditCoop", new { id = item.LocationId })
                                }
                            </td>

                            <td colspan="1" class="messageRightLocationCoop locStatusDots">
                                @if (item.CooperatorId != null)
                                {
                                    <div class="messageLabel">Phone:</div>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                }
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

            break;
        }

    case "viewFour":
        {
            <table class="table message">

                <tr class="messageHeader">

                    <th width=20% class="messageHeader messageHeaderTopLeft">
                        @Html.ActionLink("LocID", "Index", new { sortOrder = "LocID", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>

                    <th width=60%>
                        @Html.ActionLink(" ", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>

                    <th width=20% class="messageHeaderTopRight">
                        @Html.ActionLink(" ", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
                    </th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr class="spacer">
                        <td class="spacer" colspan="3"></td>
                    </tr>
                    <tbody class="comment">
                        <tr class="comment">

                            <td width="10%" colspan="1" class="messageLeftLocationCoop">
                                <div class="messageLabel">LocID:</div>
                                @Html.ActionLink(item.LocationCode.ToUpper(), "Edit", new { id = item.LocationId })
                            </td>
                            <td colspan="1">
                                <div class="messageLabel">Location:</div>
                                @Html.DisplayFor(modelItem => item.LocationName), @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td colspan="1" class="messageRightLocationCoop locStatusDots">
                                @if (item.Latitude == 0 || item.Longitude == 0)
                                {
                                    <img class="imgGrey" src="/img/ilocation.png" />
                                }
                                else
                                {
                                    <a href=@item.MapLink target="_blank"><img class="messageIcon" src="/img/ilocation.png" /></a>
                                }
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

            break;
        }

    default:
        {

<table class="table message">

    <tr class="messageHeader">

        <th width=18% class="messageHeader messageHeaderTopLeft">
            @Html.ActionLink("LocID", "Index", new { sortOrder = "LocID", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
        </th>

        <th width=22%>
            @Html.ActionLink("GDUs", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
        </th>

        <th width=30%>
            @Html.ActionLink("Growth Stage", "Index", new { sortOrder = "GDUs", toggleView = ViewBag.ToggleView, searchString = ViewBag.SearchString })
        </th>
        <th width=30% class="messageHeaderTopRight"></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="spacer">
            <td class="spacer" colspan="3"></td>
        </tr>
        <tbody class="comment">
            <tr class="comment">

                <td width="10%" colspan="1" class="messageLeftLocationCoop">
                    <div class="messageLabel">LocID:</div>
                    @Html.ActionLink(item.LocationCode.ToUpper(), "Edit", new { id = item.LocationId })
                </td>
                <td colspan="1">
                    <div class="messageLabel">GDUs:</div>
                    @Html.DisplayFor(modelItem => item.GDUs)
                </td>
                <td colspan="1">
                    <div class="messageLabel">Growth Stage:</div>
                    @Html.DisplayFor(modelItem => item.GrowthStage)
                </td>
                <td colspan="1" class="messageRightLocationCoop locStatusDots">
                    @if (item.IsPlanted == KRNL.Data.stake.Yes && item.IsStaked == KRNL.Data.stake.No && item.IsRowbanded == KRNL.Data.stake.No && item.IsHarvested == KRNL.Data.stake.No)
                    {
                        <img class="locStatusDots" src="/img/dotsPLANTED.png" alt="KRNL">
                    }
                    else if (item.IsPlanted == KRNL.Data.stake.Yes && item.IsStaked == KRNL.Data.stake.Yes && item.IsRowbanded == KRNL.Data.stake.No && item.IsHarvested == KRNL.Data.stake.No)
                    {
                        <img class="locStatusDots" src="/img/dotsSTAKED.png" alt="KRNL">
                    }
                    else if (item.IsPlanted == KRNL.Data.stake.Yes && item.IsStaked == KRNL.Data.stake.Yes && item.IsRowbanded == KRNL.Data.stake.Yes && item.IsHarvested == KRNL.Data.stake.No)
                    {
                        <img class="locStatusDots" src="/img/dotsBANDED.png" alt="KRNL">
                    }
                    else if (item.IsPlanted == KRNL.Data.stake.Yes && item.IsStaked == KRNL.Data.stake.Yes && item.IsHarvested == KRNL.Data.stake.Yes)
                    {
                        <img class="locStatusDots" src="/img/dotsHARVESTED.png" alt="KRNL">
                    }
                    else
                    {
                        <img class="locStatusDots" src="/img/dotsNULL.png" alt="KRNL">
                    }
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.LocationId })*@
                </td>
            </tr>
        </tbody>
    }
</table>


            break;
        }

