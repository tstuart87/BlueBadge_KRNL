                                @Html.ActionLink(item.LocationCode.ToUpper(), "Edit", new { id = item.LocationId })
                            </td>

                            <td colspan="1" class="messageRightLocationCoop locStatusDots">
                                @switch (item.GrowthStage)
                                {
                                    case "V0":
                                        <img class="barView" src="/img/barV00.png" alt="KRNL">
                                        break;
                                    case "VE":
                                        <img class="barView" src="/img/barVE.png" alt="KRNL">
                                        break;
                                    case "V1":
                                        <img class="barView" src="/img/barV01.png" alt="KRNL">
                                        break;
                                    case "V2":
                                        <img class="barView" src="/img/barV02.png" alt="KRNL">
                                        break;
                                    case "V3":
                                        <img class="barView" src="/img/barV03.png" alt="KRNL">
