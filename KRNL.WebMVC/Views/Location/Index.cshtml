                                        break;
                                    case "V7":
                                        <img class="barView" src="/img/barV07.png" alt="KRNL">
                                        break;
                                    case "V8":
                                        <img class="barView" src="/img/barV08.png" alt="KRNL">
                                        break;
                                    case "V9":
